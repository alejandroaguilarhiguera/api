{
  "root": true,
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["jest", "@typescript-eslint", "security"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "tsconfigRootDir": "./"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".svg"]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true,
    "es2021": true
  },
  "rules": {
    "security/detect-object-injection": 0,
    "security/detect-non-literal-fs-filename": 0, // No se requiere
    "security/detect-non-literal-regexp": 0, // Pendiente investigar
    "security/detect-unsafe-regex": 2,
    "security/detect-buffer-noassert": 2,
    "security/detect-child-process": 2,
    "security/detect-disable-mustache-escape": 2,
    "security/detect-eval-with-expression": 2,
    "security/detect-no-csrf-before-method-override": 2,
    "security/detect-non-literal-require": 2,
    "security/detect-possible-timing-attacks": 2,
    "security/detect-pseudoRandomBytes": 2,
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/no-empty-interface": 0,
    "@typescript-eslint/no-unused-vars": "error",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "error",
    "arrow-body-style": 1,
    "no-unused-expressions": "off",
    "arrow-parens": 1,
    "class-methods-use-this": 0,
    "comma-dangle": 1,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "import/no-named-as-default-member": 2,
    "lines-between-class-members": 0,
    "max-len": [1, 100, 2, {"ignoreComments": true}],
    "no-console": ["error", {"allow": ["error", "warn", "info"]}],
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "object-curly-newline": 0,
    "radix": 2,
    "require-atomic-updates": 2,
    "spaced-comment": 1
  },
  "overrides": [
    {
      "files": ["*.js", "*.d.ts"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": 2,
        "@typescript-eslint/no-explicit-any": 2,
        "@typescript-eslint/no-var-requires": 2,
        "implicit-arrow-linebreak": 2
      }
    }
  ]
}
